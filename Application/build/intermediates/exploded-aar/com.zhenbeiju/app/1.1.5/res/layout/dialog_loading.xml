<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="10dip"
    android:background="@drawable/dialog_cards_bg"
    android:gravity="center"
    android:minHeight="120dp"
    android:minWidth="280dp"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/title"
        style="@style/textview.medim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="start"
        android:singleLine="true"
        android:text="@string/processing"
        android:textColor="@color/black" />

    <commanutil.view.ProgressBarCircularIndeterminate
        android:id="@+id/progressBarCircularIndeterminate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/big_padding"
        android:background="@color/black_666" />


    <TextView
        android:id="@+id/tipTextView"
        style="@style/textview.small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/date_initing_wait"

        android:textColor="@color/materia_button_text" />

</LinearLayout>